# Environment Configuration
NODE_ENV=production
PORT=3000

# Database (MySQL) - Use your production database credentials
MYSQL_HOST=your-production-db-host
MYSQL_PORT=3306
MYSQL_USER=your-production-db-user
MYSQL_PASSWORD=your-production-db-password
MYSQL_DATABASE=survey_fs_prod
DB_POOL_SIZE=20

# JWT Secrets - CHANGE THESE IN PRODUCTION!
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_IN_PRODUCTION

# CORS - Add your production frontend URLs
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Seat Hold Configuration
SEAT_HOLD_DURATION_MINUTES=15

# Background Jobs
HOLD_CLEANUP_INTERVAL_MS=60000

# Logging
LOG_LEVEL=info
